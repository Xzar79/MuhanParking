<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 외곽: 그라디언트 테두리 -->
    <item>
        <shape>
            <gradient
                android:startColor="#fcaf17"
                android:endColor="#fcaf17"
                android:angle="-45" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 내부: 흰색 배경 -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>