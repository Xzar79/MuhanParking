<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/custom_navigation_bar">

        <!-- 상단 메뉴 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="4dp"
            android:background="@drawable/rounded_background">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/parking_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무한 파킹"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/help"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_help"
                app:tint="#FFFFFF"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <ScrollView
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AI관 섹션 -->
                <TextView
                    android:id="@+id/text_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI관"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="26sp"
                    android:textColor="#1A1A1A"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/section_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="현재 주차 공간 수"
                                android:fontFamily="@font/pretendard_bold"
                                android:textColor="#1A1A1A"
                                android:textSize="20sp" />

                            <Button
                                android:id="@+id/btn_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자세히 보기"
                                android:fontFamily="@font/pretendard_medium"
                                android:textSize="14sp"
                                android:paddingHorizontal="16dp"
                                android:background="@drawable/button_background"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:background="#F5F6FA"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="일반 주차공간"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textSize="16sp"
                                    android:textColor="#666666" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 / 72"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:background="#F5F6FA">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="장애인 주차공간"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textSize="16sp"
                                    android:textColor="#666666" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 / 4"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 내 정보 섹션 -->
                <TextView
                    android:id="@+id/text_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주차 요금 정보"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="26sp"
                    android:textColor="#1A1A1A"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="16dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">

                            <!-- Row 1 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="일반차량 / 학생차량"
                                    android:textStyle="bold"
                                    android:paddingBottom="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <!-- Row 2 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="- 최초 30분 1,500원 (초과 시 10분당 500원)"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <!-- Row 3 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="학교방문 일반차량, 일반학생 차량 정산소에 요금 납부"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <!-- Row 4 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="토, 일요일 (국경일) 무료"
                                    android:textStyle="bold"
                                    android:paddingBottom="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <!-- Row 5 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 교직원, 재학생, 국가유공자, 장애인"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />
                            </TableRow>

                            <!-- Row 6 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 본인 신분증(교직원, 재학생, 국가유공자, 장애인) 소지자에 한함 - 정산소 확인"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 신분증 미소지자 일반요금 적용"

                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <!-- Row 7 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="동/하계 방학 (모든 재학생) 국가유공자, 장애인"
                                    android:textStyle="bold"
                                    android:paddingBottom="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <!-- Row 9 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="- 5시간 할인권 1,000원 (1일 2,000원)"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="- 학부생, 석/박사 과정 (재학생 학생증 소지자 전원)"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 국가유공자, 장애인은 1시간 무료 후 초과시간은 일괄 1,000원 징수"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 재학생: 정산소에 학생증 제시 후 정산"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="* 국가유공자, 장애인: 신분증 제시"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/custom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="홈"
                android:textColor="#014F9E"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_parking"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_parking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="주차장위치"
                android:textColor="#666666"
                android:fontFamily="sans-serif"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_myinfo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_myinfo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마이페이지"
                android:textColor="#666666"
                android:fontFamily="sans-serif"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>